        %nav.my-2.my-md-0.mr-md-3
          %a.p-2.text-dark{:href => "#"} Features
          %a.p-2.text-dark{:href => "#"} Enterprise
          %a.p-2.text-dark{:href => "#"} Support
          %a.p-2.text-dark{:href => "#"} Pricing
        %a.btn.btn-outline-primary{:href => "#"} Sign up
    = yield
