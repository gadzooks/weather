-unless alerts.blank?
  %a{name: 'all-alerts'}
  - alerts.sort.each do |alert|
    - css_classes = 'alert-details '
    - css_classes += 'alert-' + alert.severity if alert.severity
    %div{class: css_classes}
      %span.alert_id.title{id: alert.alert_id}
        %a{href: '#top'}
          =alert.alert_id
          &uarr;
      %span.title
        = alert.title
      - unless alert.regions.blank?
        .regions
          %span.center.region
            = "Regions Impacted : "
          = alert.regions.join(', ')
      .description
        %span.center.description
          = "Details : "
        =alert.description
